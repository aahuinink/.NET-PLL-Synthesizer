<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SynthGUI.MainPage">

    <ScrollView>
        <HorizontalStackLayout>
            <Picker x:Name="pkComPorts"
                    Margin="10"
                    HeightRequest="50"/>
            <Button x:Name="btnListCOM"
                    Margin="10"
                    Text="List COMs"
                    HeightRequest="50"
                    WidthRequest="150"
                    Pressed="MainPage_Loaded"/>
            <Button x:Name="btnOpenCOM"
                    Margin="10"
                    Text="Open COM"
                    HeightRequest="50"
                    WidthRequest="150"
                    Pressed="btnOpenCOM_Pressed"/>
            <Entry x:Name="entryInput"
                   Text="Enter 4-bit binary number"
                   Margin="10"
                   Completed="entryInput_Completed"
                   HeightRequest="20"/>
            <Label x:Name="output"
                   Text=""
                   Margin="10"
                   HeightRequest="50"/>
        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>
